<div id="clock" aria-live="polite">--:--:--</div>

<script>
	function updateClock() {
		const now = new Date();
		const time = now.toLocaleTimeString('en-AU', {
			hour: '2-digit',
			minute: '2-digit',
			second: '2-digit',
			hour12: false,
			timeZone: 'Australia/Brisbane'
		});
		document.getElementById('clock').textContent = time;
}
updateClock();
setInterval(updateClock, 1000);
</script>

